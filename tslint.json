{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": ["tslint-eslint-rules", "tslint-config-blvd", "tslint-config-prettier"],
  "rules": {
    "no-namespace": false,
    "no-shadowed-variable": false,
    "no-unused-variable": false,
    "no-var-keyword": false,
    "prefer-const": false,
    "prettier": [
      true,
      {
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "printWidth": 100,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false
      }
    ]
  }
}
